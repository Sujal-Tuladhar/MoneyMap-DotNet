@page "/"
@using MoneyMapDotnet.Components.Layout
@layout NoNavbar

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden; /* Remove scroll */
    }
</style>

<div style="
    height: 100vh;
    display: flex;
    justify-content: center;
    margin-top: 300px;
    text-align: center;
    padding: 20px;
    box-sizing: border-box;">
    <div>
        <h1 style="
            font-size: 5rem;
            margin-bottom: 20px;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);">
            Money Map
        </h1>
        <p style="
            font-size: 1.5rem;
            margin-bottom: 40px;
            font-weight: 300;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);">
            Your Personal Expense Tracking System
        </p>
        <NavLink style="
            background-color: transparent;
            color: black;
            border: 2px solid black;
            padding: 15px 30px;
            font-size: 1.2rem;
            cursor: pointer;
            border-radius: 50px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);"
                href="/Register"
                onmouseover="this.style.backgroundColor='black'; this.style.color='#73931d';"
                onmouseout="this.style.backgroundColor='transparent'; this.style.color='black';">
            Enter Expense Tracker
        </NavLink>
    </div>
</div>

